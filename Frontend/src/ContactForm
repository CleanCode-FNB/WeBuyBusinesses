import React, { useState } from 'react';
import { useParams } from 'react-router-dom';

const ContactForm = () => {
  const { businessId } = useParams();
  const [formData, setFormData] = useState({
    name: '',
    surname: '',
    email: '',
    phone: '',
    description: ''
  });

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData({ ...formData, [name]: value });
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    // Simulate sending a message to the seller
    console.log("Message sent to seller:", formData);
    alert("Your message has been sent to the seller!");
    // Reset the form
    setFormData({ name: '', surname: '', email: '', phone: '', description: '' });
  };

  return (
    <div>
      <h1>Contact Seller for Business {businessId}</h1>
      <form onSubmit={handleSubmit}>
        <input
          type="text"
          name="name"
          placeholder="First Name"
          value={formData.name}
          onChange={handleInputChange}
          required
        />
        <input
          type="text"
          name="surname"
          placeholder="Surname"
          value={formData.surname}
          onChange={handleInputChange}
          required
        />
        <input
          type="email"
          name="email"
          placeholder="Email"
          value={formData.email}
          onChange={handleInputChange}
          required
        />
        <input
          type="tel"
          name="phone"
          placeholder="Phone Number"
          value={formData.phone}
          onChange={handleInputChange}
          required
        />
        <textarea
          name="description"
          placeholder="Why are you interested in this business?"
          value={formData.description}
          onChange={handleInputChange}
          required
        />
        <button type="submit">Send Message</button>
      </form>
    </div>
  );
};

export default ContactForm;
